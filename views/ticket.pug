doctype html
html(lang="en")
    head
        include includes/head.pug
    body.bg-secondary
        .container-fluid.bg-primary.d-flex.justify-content-center.align-items-center
            .container.my-4.d-flex.flex-column.justify-content-center.align-items-center
                h2 TICKET ##{ticket.id}
                h4 Shop: MERCADONA 
                h4 Total: #{ticket.total}€
                h5 #{ticket.date}
        .container.py-4
            .d-flex.pb-4.flex-row-reverse 
                button.btn.btn-danger Eliminar ticket
            ol.list-group.list-group-numbered
                each product in ticket.products
                    li.list-group-item.d-flex.justify-content-between.align-items-start
                        .ms-2.me-auto
                            .fw-bold #{product.name}
                            - var total = product.price * product.amount
                            |       #{total}€ (#{product.price}€)
                        span.badge.bg-primary.rounded-pill #{product.amount}
