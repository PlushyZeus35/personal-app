    body
        include includes/flashMessages.pug
        // Modals
        #newBirthModal.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-header
                        h1#staticBackdropLabel.modal-title.fs-5 Añadir cumpleaños
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body
                        form(action="/birthday" method="POST")
                            .mb-3
                                label.form-label(for="valueInput") Nombre
                                input#valueInput.form-control(type="text" name="birthname" required)
                            .mb-3
                                label.form-label(for="dayInput") Día
                                input#dayInput.form-control(type="number" step="1" min="1" max="31" name="birthday" required)
                            .mb-3
                                label.form-label(for="monthInput") Mes
                                select#monthInput.form-select.mb-3(name="birthmonth")
                                    option(selected='' value='1') Enero
                                    option(value='2') Febrero
                                    option(value='3') Marzo
                                    option(value='4') Abril
                                    option(value='5') Mayo
                                    option(value='6') Junio
                                    option(value='7') Julio
                                    option(value='8') Agosto
                                    option(value='9') Septiembre
                                    option(value='10') Octubre
                                    option(value='11') Noviembre
                                    option(value='12') Diciembre
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cerrar
                                button.btn.btn-primary(type='submit') Guardar

        #editBirthModal.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-labelledby='staticBackdropLabel' aria-hidden='true')
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-header
                        h1#staticBackdropLabel.modal-title.fs-5 Editar cumpleaños
                        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                    .modal-body
                        form(action="/editbirthday" method="POST")
                            .d-none
                                input#editedId(name="birthid")
                            .mb-3
                                label.form-label(for="valueInput") Nombre
                                input#editedName.form-control(type="text" name="birthname" required)
                            .mb-3
                                label.form-label(for="dayInput") Día
                                input#editedDay.form-control(type="number" step="1" min="1" max="31" name="birthday" required)
                            .mb-3
                                label.form-label(for="monthInput") Mes
                                select#editedMonth.form-select.mb-3(name="birthmonth")
                                    option(selected='' value='1') Enero
                                    option(value='2') Febrero
                                    option(value='3') Marzo
                                    option(value='4') Abril
                                    option(value='5') Mayo
                                    option(value='6') Junio
                                    option(value='7') Julio
                                    option(value='8') Agosto
                                    option(value='9') Septiembre
                                    option(value='10') Octubre
                                    option(value='11') Noviembre
                                    option(value='12') Diciembre
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cerrar
                                a#deleteBirthButton.btn.btn-danger(href="#") Eliminar
                                button.btn.btn-primary(type='submit') Guardar

        
